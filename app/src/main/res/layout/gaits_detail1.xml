<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/conRowLayer"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/customshape"
    android:layout_marginBottom="5dp">
    <TextView
        android:id="@+id/txtdisplayGait"
        android:layout_width="190dp"
        android:layout_height="33dp"
        android:layout_marginEnd="4dp"
        android:layout_marginStart="16dp"
        android:layout_marginTop="8dp"
        android:gravity="center_vertical"
        android:textSize="18sp"
        app:layout_constraintEnd_toStartOf="@+id/txtdisplayTime"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/txtdisplayTime"
        android:layout_width="61dp"
        android:layout_height="33dp"
        android:layout_marginEnd="4dp"
        android:layout_marginTop="8dp"
        android:gravity="center_vertical"
        android:textSize="18sp"
        app:layout_constraintEnd_toStartOf="@+id/txtdisplayTotalTime"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/txtdisplayTotalTime"
        android:layout_width="50dp"
        android:layout_height="33dp"
        android:layout_marginEnd="8dp"
        android:layout_marginTop="8dp"
        android:gravity="center_vertical"
        android:textSize="18sp"
        app:layout_constraintEnd_toStartOf="@+id/btnRemoveLine"
        app:layout_constraintTop_toTopOf="parent" />

    <ImageButton
        android:id="@+id/btnRemoveLine"
        android:layout_width="25dp"
        android:layout_height="25dp"
        android:layout_marginEnd="16dp"
        android:layout_marginTop="16dp"
        android:background="@color/wallet_bright_foreground_holo_dark"
        android:contentDescription="@string/remove_line"
        android:src="@android:drawable/btn_dialog"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent" />
</android.support.constraint.ConstraintLayout>