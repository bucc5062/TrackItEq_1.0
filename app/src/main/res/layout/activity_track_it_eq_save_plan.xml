<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent" android:layout_height="match_parent">

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceMedium"
        android:text="@string/savePlanLabel"
        android:id="@+id/textView5"
        android:layout_marginTop="42dp"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true" />

    <EditText
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/txtPlanName"
        android:layout_marginTop="36dp"
        android:layout_below="@+id/textView5"
        android:layout_centerHorizontal="true"
        android:width="200dp" />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/saveplan"
        android:id="@+id/btnSaveDia"
        android:layout_below="@+id/txtPlanName"
        android:layout_alignLeft="@+id/txtPlanName"
        android:layout_alignStart="@+id/txtPlanName" />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/btnCancel"
        android:id="@+id/btnCancel"
        android:layout_below="@+id/txtPlanName"
        android:layout_alignRight="@+id/txtPlanName"
        android:layout_alignEnd="@+id/txtPlanName" />
</RelativeLayout>